exec --no-startup-id picom --config $HOME/.config/picom.conf --experimental-backends
# bg color
exec --no-startup-id xsetroot -solid "#0e0e0e"
# enable touchpad tap-to-click
exec --no-startup-id xinput set-prop 11 343 1
# disable caps lock switch
exec --no-startup-id xmodmap -e "clear lock"
# set caps_lock as escape
exec --no-startup-id xmodmap -e "keysym Caps_Lock = Escape"

# i3 config file (v4)
#
# Please see https://i3wm.org/docs/userguide.html for a complete reference!

# notification daemon
exec systemctl --user start mako

# alt as mod
set $mod Mod1
# windows key
set $win Mod4

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:JetBrains Mono NL 13

# default applications
set $term kitty
set $menu rofi -show drun
set $browser ranger ~

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# reload mako
bindsym $mod+shift+n exec makoctl reload && bash ~/.config/scripts/mako-test.sh
# close focused window
bindsym $mod+Shift+q kill
# sleep mode
bindsym $mod+shift+s exec systemctl suspend -i
# log out
bindsym $mod+ctrl+shift+e exit 
# restart
bindsym $mod+ctrl+shift+r exec systemctl reboot 
# shut down
bindsym $mod+ctrl+shift+f+d exec systemctl poweroff 
# quick desktop screenshot
bindsym Print exec grim ~/Pictures/$(date +"%m-%d-%YT%H-%M-%S").png
# was opening a new terminal
bindsym ctrl+shift+n nop

bindsym $mod+o+1 exec firefox
bindsym $mod+Return exec $term
bindsym $win+r exec $menu

default_border pixel 4
hide_edge_borders smart
default_border pixel 1
default_floating_border pixel 1

gaps inner 10
gaps outer 3
gaps top 0

# font ################################

font pango:JetBrainsMono Nerd Font Mono 11

# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment-independent system tray GUI for it.
exec --no-startup-id nm-applet

# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +2% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -2% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status
bindsym XF86MonBrightnessUp exec light -A 1
bindsym XF86MonBrightnessDown exec light -U 1

